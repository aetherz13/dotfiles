[alias]
	br = branch -vv
	ci = commit
	co = checkout
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	st = status
[core]
	pager = delta
[diff]
	colorMoved = default
[credential]
	helper = /usr/lib/git-core/git-credential-libsecret
[diff "hex"]
	textconv = xxd -g1
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[pull]
	rebase = true
[rebase]
	autoSquash = true
[rerere]
	enabled = true
	autoUpdate = true
[commit]
	verbose = true
[include]
	path = ~/.config/git/config-local
